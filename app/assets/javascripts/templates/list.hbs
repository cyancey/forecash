{{! Call this template in javascript like this: HandlebarsTemplates['list'](context) }}

{{! NOTE: Style the inflow green and outflow red }}
<table id="list">
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  {{#each transactions}}
  {{#if inflow}}
  <tr id = "{{id}}" class = "inflow">
  {{else}}
  <tr id = "{{id}}" class = "outflow">
  {{/if}}
    <td>{{date}}</td>
    <td>{{description}}</td>
    <td>{{amount}}</td>
    <td><button class="remove-transaction">Remove</button></td>
  </tr>
  {{/each}}
</table>