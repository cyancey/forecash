{{! Call this template in javascript like this: HandlebarsTemplates['list'](context) }}

{{! NOTE: Style the inflow green and outflow red }}

{{#each months}}
<table class="pure-table pure-table-horizontal list month">
  <thead>
    <tr>
      <th>{{name}}</th>
      {{#if inflow}}
        <th class="amount inflow monthly_total">${{total}}</th>
      {{else}}
        <th class="amount outflow monthly_total">${{total}}</th>
      {{/if}}
    </tr>
  </thead>
<table id="list" class="pure-table pure-table-striped list" hidden>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each transactions}}
    <tr id = "{{id}}">
      <td>{{date}}</td>
      <td>{{description}}</td>
      {{#if inflow}}
        <td class="amount inflow">${{amount}}</td>
      {{else}}
        <td class="amount outflow">${{amount}}</td>
      {{/if}}
      <td><button class="remove-transaction pure-button">Remove</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</table>
{{/each}}